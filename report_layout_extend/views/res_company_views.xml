<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_report_code_line" model="ir.ui.view">
        <field name="name">res.company.form.inherit.report.code.line</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Codification des rapports">
                    <field name="report_code_ids">
                        <tree editable="bottom">
                            <field name="report_id"/>
                            <field name="code"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
