<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fleet_vehicle_recharge_form" model="ir.ui.view">
        <field name="name">fleet.recharge.form</field>
        <field name="model">fleet.recharge</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="volume"/>
                        <field name="date"/>
                        <field name="price_unit"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fleet_vehicle_recharge_tree" model="ir.ui.view">
        <field name="name">fleet.recharge.tree</field>
        <field name="model">fleet.recharge</field>
        <field name="arch" type="xml">
            <tree default_order="date desc">
                <field name="name"/>
                <field name="volume"/>
                <field name="date"/>
                <field name="price_unit"/>
            </tree>
        </field>
    </record>


    <record id="fleet_vehicle_recharge_search" model="ir.ui.view">
        <field name="name">fleet.recharge.search</field>
        <field name="model">fleet.recharge</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <group expand="1" string="Group By">
                    <filter string="Date" name="groupby_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="open_view_fleet_alimentation" model="ir.actions.act_window">
        <field name="name">Alimentation de citerne</field>
        <field name="res_model">fleet.recharge</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Alimentation de citerne"
              id="fleet_alimentation_menu_item"
              action="open_view_fleet_alimentation"
              parent="fleet.menu_fleet_reporting"
    />

    <record id="fleet_citerne_tree" model="ir.ui.view">
        <field name="name">fleet.citerne.tree</field>
        <field name="model">fleet.citerne</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="date"/>
                <field name="name"/>
                <field name="move"/>
                <field name="balance"/>
            </tree>
        </field>
    </record>

    <record id="open_view_fleet_citerne" model="ir.actions.server">
        <field name="name">État de citerne</field>
        <field name="model_id" ref="stock_extend.model_fleet_citerne"/>
        <field name="state">code</field>
        <field name="code">action = model.action_display_fleet_citerne_data()</field>
    </record>

    <menuitem name="État de citerne"
              id="fleet_citerne_menu_item"
              action="open_view_fleet_citerne"
              parent="fleet.menu_fleet_reporting"
    />
</odoo>
